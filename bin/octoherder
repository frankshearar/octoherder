#! /usr/bin/env ruby
# -*- mode: ruby -*-
# vi: set ft=ruby :

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'octoherder'

def help
  puts <<-HELP
usage:
    octoherder --help
    octoherder --version
    octoherder -f definitions.yml
    octoherder -r your/repo [-o output-file.yml]
HELP
end

help
